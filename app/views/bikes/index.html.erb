

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<div class="site-wrapper">

	<div class="site-wrapper-inner">
		<div class="header">
			<div class="cover-container">
				<div class="header">
					<div class="masthead clearfix">
						<div class="inner">
							<h3 class="masthead-brand">Bikie</h3>
							<%= render 'shared/navigation' %>
						</div>
					</div>
				</div>
			</div>


			<div style='width: 100%;'>
				<div id="multi_markers" style='width: 100%; height: 400px;'></div>
			</div>


			<script type="text/javascript">
				var handler = Gmaps.build('Google');
				handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
					var markers = handler.addMarkers(<%=raw @hash.to_json %>);
					handler.bounds.extendWith(markers);
					handler.fitMapToBounds();
				});
			</script>

			<div class="col-md-8">
			<div class="your-class">
  <div>your content</div>
  <div>your content</div>
  <div>your content</div>
</div>
			</div>

			<div class="col-md-4">
				<% @bikes.each do |bike| %>
				<ul>
					<li><%= bike.brand %></li>
					<li><%= bike.category %></li>
					<li><%= bike.description %></li>
					<li><%= bike.year_made %></li>
					<li><%= bike.latitude %></li>
					<li><%= bike.longitude %></li>
					<li><%= bike.address %></li>
					<li>
						<%= link_to 'Edit', edit_bike_path(bike) %> | 
						<%= link_to 'Destroy', bike_path(bike),
						method: :delete,
						data: { confirm: 'Are you sure?' } %></td>
					</li>
				</ul>

				<% end %>
			</div>


		</div>

	</div>
